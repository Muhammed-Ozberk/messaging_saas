{% block scripts %}

  <script src="/socket.io/socket.io.js"></script>

	<script>

        var conversationID = null;
        var messages = null;
        var userID = null;
        var limit = 20;
        var token= null;
        var seenData = null;
        var socket = io({
		        query: {
              userID: "{{data.userID}}",
            }
        });
        socket.on("connect", () => {
            console.log( "connected" );
        });

        socket.emit('join the chat',{ receiverID: "{{data.receiverID}}"});

        socket.on('join the chat', (data) => {
            conversationID = data.conversationID;
            messages = data.messageData.messages;
            seenData=data.messageData.isSeen;
            userID = data.userID;
            token = data.token;
            listMessages();
        });

        socket.on('is seen', (data) => {
            if(data.isSeen == true){
                seenData = true;
                seenInfo();
            }
        });
        
        var messageInput = document.getElementById( "messageInput" ); 
        var messageList = document.getElementById( "messageList" );
        var isSeen = document.getElementById( "isSeen" );

        document.getElementById( "submitButton" ).onclick =submitMessage;

        function submitMessage() {
            let item = document.createElement('li');
            let att = document.createAttribute("class");
            var localTime = new Date().toLocaleTimeString();
            att.value = "right";
            item.setAttributeNode(att);
            item.innerHTML="";
            item.innerHTML+=`
                <li class="right">
                  <div class="conversation-list">
                    <div class="user-chat-content">
                      <div class="ctext-wrap">
                        <div class="ctext-wrap-content">
                          <p class="mb-0">
                            ${messageInput.value}
                          </p>
                          <p class="chat-time mb-0"><i class="ri-time-line align-middle"></i> <span class="align-middle">10:12</span>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
            `;
            messageList.appendChild(item);
            sendSocketMessage(messageInput.value);
            messageInput.value="";
        }

        function sendSocketMessage(message) {
            socket.emit('send message', { message: message, conversationID: conversationID }, (data) => {
                if(data.isSeen == false){
                    seenData = false;
                    seenInfo();
                }
            });
        }

        socket.on('receive message', (data) => {
            seenData = data.isSeen;
            let item = document.createElement('li');
            let att = document.createAttribute("class");
            item.innerHTML="";
            item.innerHTML+=`
              <li>
                <div class="conversation-list">
                  <div class="user-chat-content">
                    <div class="ctext-wrap">
                      <div class="ctext-wrap-content">
                        <p class="mb-0">
                            ${data.message}
                        </p>
                        <p class="chat-time mb-0"><i class="ri-time-line align-middle"></i> <span class="align-middle">10:12</span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </li> ` ;
            messageList.appendChild(item);
        });

        function listMessages() {
            messageList.innerHTML="";
            messages.forEach(element => {
                if (element.senderID == userID) {
                    let item = document.createElement('li');
                    let att = document.createAttribute("class");
                    att.value = "right";
                    item.setAttributeNode(att);
                    item.innerHTML="";
                    item.innerHTML+=`
                        <li class="right">
                          <div class="conversation-list">
                            <div class="user-chat-content">
                              <div class="ctext-wrap">
                                <div class="ctext-wrap-content">
                                  <p class="mb-0">
                                    ${element.content}
                                  </p>
                                  <p class="chat-time mb-0"><i class="ri-time-line align-middle"></i> <span class="align-middle">10:12</span>
                                  </p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </li>
                    `;
                    messageList.appendChild(item);
                } else {
                    let item = document.createElement('li');
                    let att = document.createAttribute("class");
                    item.innerHTML="";
                    item.innerHTML+=`
                      <li>
                        <div class="conversation-list">
                          <div class="user-chat-content">
                            <div class="ctext-wrap">
                              <div class="ctext-wrap-content">
                                <p class="mb-0">
                                    ${element.content}
                                </p>
                                <p class="chat-time mb-0"><i class="ri-time-line align-middle"></i> <span class="align-middle">10:12</span>
                                </p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </li> ` ;
                    messageList.appendChild(item);                    
                }             
            });
            seenInfo();
        }
        
        function fetchMessages(limit) {
            $.ajax({
            method: "GET",
            headers: {
                authorization: `Bearer ${token}`
            },
            url: `/api/fetch-messages/${conversationID}?limit=${limit}`,
            dataType: 'json',
            }).done((res) => {
                messages = res.data.messages;
                seenData = res.data.isSeen;
                listMessages();
            }).fail((err)=>{
                console.log(err);
            });
        }

        function moreMessages() {
            fetchMessages(limit);
            limit+=10;
        }

        function seenInfo() {
          if(seenData==true){
            isSeen.innerHTML="";
            isSeen.innerHTML+=`Okundu`;
          }else{
            isSeen.innerHTML="";
            isSeen.innerHTML+=`Okunmadƒ±`;
          }
        }

  </script>

